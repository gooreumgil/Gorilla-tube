extends layouts/main

block content
  .form-container
    .record-container#jsRecord-container
      form(action="/video/upload", method="post" enctype="multipart/form-data")
        div.fileUpload
          label(for="file") Video File
          input(type="file", id="file", name="fileUrl", required="true", accept="video/*")
        input(type="text", placeholder="Title", name="title", required="true")
        textarea(name="description", placeholder="Description", required="true")
        input(type="submit", value="Upload Video")